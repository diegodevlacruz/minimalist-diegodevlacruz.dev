---
import Section from "../Section.astro";

import { education, certificates } from "@cv";
---

<Section title="Education">
  <ul>
    {
      education.map(({ institution, area, studyType, startDate, endDate }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear = new Date(endDate).getFullYear();
        const years = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{area}</h3>
                </div>
                <time>{years}</time>
              </header>
              <footer>
                <h4>{institution}</h4>
                <p>{studyType}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
    {
      certificates.map(({ name, date, issuer, url }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                </div>
                <time>{date}</time>
              </header>
              <footer>
                <h4>{issuer}</h4>
                <a href={url}>AWS Cloud Practitioner Badge</a>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    color: #111;
    font-weight: 500;
  }

  article h3 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
